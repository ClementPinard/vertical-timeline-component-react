{
	"name": "vertical-timeline-component-react",
	"version": "2.1.2",
	"description": "A simple component for create a vertical timeline with Reactjs",
	"main": "./lib/cjs/index.js",
	"module": "./lib/esm/index.js",
	"types": "./lib/esm/index.d.ts",
	"files": [
		"/lib"
	],
	"repository": "https://github.com/Proskynete/vertical-timeline-component-react",
	"author": {
		"name": "Eduardo Alvarez",
		"email": "eduardo.a1993@gmail.com"
	},
	"license": "MIT",
	"keywords": [
		"Typescript",
		"Ts",
		"React",
		"Reactjs",
		"Vertical Timeline Component React",
		"Vertical Timeline"
	],
	"scripts": {
		"build": "npm run build:esm && npm run build:cjs",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir lib/cjs",
		"lint": "tslint -p ./",
		"lint:fix": "tslint -p ./ --fix",
		"prettier:check": "prettier --check ./src/**/*.js",
		"prettier:format": "prettier --config .prettierrc --write ./src/**/*.js",
		"test": "jest && npm run test:coverage",
		"test:update-snapshots": "jest --updateSnapshot",
		"test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watchAll"
	},
	"peerDependencies": {
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"@types/styled-components": "^5.1.9",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.5.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"styled-components": "^5.2.1",
		"tslint": "^6.1.3",
		"typescript": "^4.2.3"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.8",
		"@types/jest": "^26.0.21",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.2",
		"@types/react-test-renderer": "^17.0.1",
		"coveralls": "^3.1.0",
		"enzyme": "^3.11.0",
		"jest": "^26.6.3",
		"react-test-renderer": "^17.0.1",
		"ts-jest": "^26.5.4"
	}
}
